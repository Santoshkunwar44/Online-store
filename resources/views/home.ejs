<!-- HERO MAIN SECTION -->
<section class="hero-section">
  <div class="container mx-auto flex items-center justify-between px-10">
    <div class="w-1/2 px-2">
      <h6>
        <em
          >Wanna Try ? Lorem ipsum dolor sit amet consectetur adipisicing elit.
          Temporibus aliquam odit ullam. Lorem ipsum dolor sit amet consectetur
          adipisicing elit. Officia quae nesciunt alias?</em
        >
      </h6>
      <h2 class="my-5" style="font-size: 2.8rem; letter-spacing: 1px">
        Get Now
      </h2>
      <a href="#store">
        <button class="order-btn px-6 py-2 text-white">Order Now</button></a
      >
    </div>
    <div class="section-hero-img w-1/2">
      <img src="/img/thero.png" alt="" />
    </div>
  </div>
</section>

<!-- STORE ITEMS SECTION -->

<section id="store" class="store container mx-auto py-8 px-5">
  <h1 style="font-size: 2.8rem">All SneaKers</h1>
  <div class="grid grid-cols-4 col-gap-12 row-gap-16">
    <% product.map((product)=>{ %>
    <div class="store-item flex flex-col items-center">
      <div>
        <img class="h-30 mb-3 mx-auto" src="/img/<%=product.image%> " alt="" />
      </div>
      <div>
        <h2 class="mb-3 text-lg"><%=product.name%></h2>
        <span class="min-title rounded full py-1 px-4 uppercase text-xs"
          ><%= product.size %>
        </span>
        <div class="flex items-center justify-between my-4">
          <span class="text-large font-bold"><%= product.price%> </span>
          <button
            data-product="<%= JSON.stringify(product)  %> "
            class="add-to-cart rounded full py-1 px-4 flex items-center font-bold"
          >
            <span>+</span>
            <span class="ml-4">Add</span>
          </button>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
</section>
