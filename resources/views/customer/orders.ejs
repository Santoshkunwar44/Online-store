<section class="allOrders">
  <div class="container mx-auto w-4/5 pt-10">
    <h1 class="text-3xl font-bold mb-4">All Orders</h1>
    <% if(messages.success){ %>
    <div
      id="success-alert"
      class="flex items-center bg-green-500 text-white text-sm font-bold tracking-wider py-4 px-3"
      role="alert"
    >
      <p><%=messages.success %></p>
    </div>
    <% } %>

    <table class="py-5 px-5 w-full table-auto bg-white">
      <thead>
        <tr>
          <th class="py-2 px-4 text-left">Orders</th>
          <th class="py-2 px-4 text-left">Address</th>
          <th class="py-2 px-4 text-left">Phone</th>
          <th class="py-2 px-4 text-left">Time</th>
        </tr>
      </thead>
      <tbody>
        <% if(product.length){ %> <% product.map((item)=>{ %>
        <tr>
          <td class="border py-4 px-3">
            <a href="/customer/orders/<%=item._id  %> " class="link"
              ><%= item._id %>
            </a>
          </td>
          <td class="border py-4 px-3"><%= item.address %></td>
          <td class="border py-4 px-3"><%= item.phone %></td>
          <td class="border py-4 px-3">
            <%= moment(item.createdAt).format("hh:mm A") %>
          </td>
          <td></td>
        </tr>

        <% }) %> <% }else{ %>
        <tr>
          <td class="border py-4 px-3">No orders Placed</td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</section>
