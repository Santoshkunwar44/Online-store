<section class="OrderTrackerWrapper">
  <div class="d-flex justify-center items-center">
    <div class="status-box w-2/3 mx-auto">
      <div class="flex items-center justify-between mb-12">
        <h1 class="text-xl font-bold">Track your order</h1>
        <input type="hidden" id="hiddenInput" value="<%= JSON.stringify(order) %>" name="order" >
        <h6 class="bg-white py-2 px-2 font-bold text-green-500 rounded-2xl">
          <%=order.id %>
        </h6>
      </div>
      <ul>
        <li class="status_line text-xl pb-16 step-completed" data-status="order_placed"><span>Order Placed</span></li>
        <li class="status_line text-xl pb-16 current-step" data-status="confirmed"><span>Confirmed</span></li>
        <li class="status_line text-xl pb-16" data-status="prepared"><span>Preparation</span></li>
        <li class="status_line text-xl pb-16" data-status="delivered"><span>Out For Delivery</span></li>
        <li class="status_line text-xl " data-status="completed"><span>Complete</span></li>
      </ul>
    </div>
  </div>
</section>
